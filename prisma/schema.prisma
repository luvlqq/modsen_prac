generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  login           String   @unique
  password        String
  role            UserRole @default(USER)
  hashRt          String?
  createdMeetups  Meetup[] @relation("MeetupCreator")
  followedMeetups Meetup[] @relation("MeetupFollower")
}

model Meetup {
  id              Int      @id @default(autoincrement())
  name            String
  description     String
  place           String
  date            DateTime
  tags            String[]
  meetupOwner     User?    @relation("MeetupCreator", fields: [meetupCreator], references: [id])
  meetupCreator   Int?
  meetupFollowers User[]   @relation("MeetupFollower")
}

enum UserRole {
  ADMIN
  USER
}
