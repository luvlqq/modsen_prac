generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  login    String   @unique
  password String
  role     UserRole @default(USER)
  hashRt   String?
}

model Meetup {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  place       String
  date        DateTime
  tags        String[]
}

enum UserRole {
  ADMIN
  USER
}
